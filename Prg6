  background: #f7f9fc;
  border-radius: 5px;
}

function calc(op) {
  let n1 = parseFloat(document.getElementById('num1').value);
  let n2 = parseFloat(document.getElementById('num2').value);
  let r = document.getElementById('result');
  let res;

  if (isNaN(n1)) return r.textContent = 'Enter Number 1';
  if (['sum','diff','prod','quot','rem','pow'].includes(op) && isNaN(n2))
    return r.textContent = 'Enter Number 2';

  switch (op) {
    case 'sum': res = n1 + n2; break;
    case 'diff': res = n1 - n2; break;
    case 'prod': res = n1 * n2; break;
    case 'quot': res = n2 ? n1 / n2 : 'Error: divide by 0'; break;
    case 'rem': res = n2 ? n1 % n2 : 'Error: divide by 0'; break;
    case 'pow': res = n1 ** n2; break;
    case 'sq': res = n1 ** 2; break;
    case 'sqrt': res = n1 < 0 ? 'Error: negative root' : Math.sqrt(n1);
  }

  r.textContent = 'Result: ' + res;
}
