<body>
  <div class="calculator">
    <h2>Simple Calculator</h2>

    <label>Number 1:</label>
    <input type="number" id="num1" placeholder="Enter first number">

    <label>Number 2:</label>
    <input type="number" id="num2" placeholder="Enter second number">

    <p class="note">Note: Square and Square-root use Number 1 only.</p>

    <div class="buttons">
      <button onclick="calc('sum')">+</button>
      <button onclick="calc('diff')">−</button>
      <button onclick="calc('prod')">×</button>
      <button onclick="calc('quot')">÷</button>
      <button onclick="calc('rem')">%</button>
      <button onclick="calc('pow')">xʸ</button>
      <button onclick="calc('sq')">x²</button>
      <button onclick="calc('sqrt')">√x</button>
    </div>

    <div id="result" class="result">Result will appear here</div>
  </div>

  <script src="script.js"></script>
</body>
</html>

