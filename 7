function getJson() {
  try {
    return JSON.parse(document.getElementById("jsonInput").value);
  } catch {
    document.getElementById("output").textContent = "❌ Invalid JSON!";
    return null;
  }
}

// a) JSON → Object
function jsonToObj() {
  const obj = getJson();
  if (obj) document.getElementById("output").textContent = JSON.stringify(obj, null, 2);
}

// b) JSON → Table
function jsonToTable() {
  const data = getJson();
  if (!data || !Array.isArray(data)) return document.getElementById("output").textContent = "Please enter a JSON array!";
  
  let table = "<table border='1' cellspacing='0'><tr>";
  for (let key in data[0]) table += `<th>${key}</th>`;
  table += "</tr>";
  data.forEach(row => {
    table += "<tr>";
    for (let key in row) table += `<td>${row[key]}</td>`;
    table += "</tr>";
  });
  table += "</table>";
  document.getElementById("output").innerHTML = table;
}

// c) JSON ↔ CSV
function jsonCsv() {
  const data = getJson();
  if (!data || !Array.isArray(data)) return document.getElementById("output").textContent = "Please enter a JSON array!";
  
  const keys = Object.keys(data[0]);
  const csv = [keys.join(","), ...data.map(obj => keys.map(k => obj[k]).join(","))].join("\n");
  
  // Convert back to JSON
  const csvToJson = csv.split("\n").slice(1).map(line => {
    const vals = line.split(",");
    return keys.reduce((a, k, i) => ((a[k] = vals[i]), a), {});
  });

  document.getElementById("output").textContent = "CSV:\n" + csv + "\n\nBack to JSON:\n" + JSON.stringify(csvToJson, null, 2);
}

// d) Create hash using crypto
async function makeHash() {
  const str = document.getElementById("hashInput").value;
  if (!str) return document.getElementById("output").textContent = "Please enter a string!";
  
  const data = new TextEncoder().encode(str);
  const hashBuffer = await crypto.subtle.digest("SHA-256", data);
  const hashHex = Array.from(new Uint8Array(hashBuffer)).map(b => b.toString(16).padStart(2, "0")).join("");
  
  document.getElementById("output").textContent = `String: ${str}\nSHA-256 Hash:\n${hashHex}`;
}
